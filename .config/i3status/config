general {
        interval = 1
        output_format = "i3bar"
}

order += "volume master"
order += "disk /"
order += "cpu_usage"
order += "load"
order += "tztime local"

cpu_usage {
        format = "âš¡%usage"
}

volume master {
        format = "ðŸ”Š %volume"
        format_muted = "ðŸ”‡ (%volume)"
        device = "default"
        mixer = "Master"
        mixer_idx = 0
}

wireless _first_ {
        format_up = "W: (%quality at %essid) %ip"
        format_down = "W: down"
}

ethernet _first_ {
        # if you use %speed, i3status requires root privileges
        format_up = "%ip"
        format_down = "down"
}

battery all {
        format = "%status %percentage %remaining"
}

tztime local {
        format = "ðŸ“† %d %b %Y %a %H:%M:%S"
}

load {
        format = "ðŸ”¥ %1min"
}

disk "/" {
        format = "ðŸ’¾ %avail"
}
